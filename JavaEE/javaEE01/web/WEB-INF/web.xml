<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--  添加用户  -->
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>javaEE01.web.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <!--  删除用户  -->
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>javaEE01.web.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <!--  查找和修改用户  -->
    <servlet>
        <servlet-name>SearchAndModify</servlet-name>
        <servlet-class>javaEE01.web.SearchAndModify</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchAndModify</servlet-name>
        <url-pattern>/searchAndModify</url-pattern>
    </servlet-mapping>
</web-app>